#ifndef PRELOADED_INCLUDED
#define PRELOADED_INCLUDED

#pragma once

// A simple monotonic counter.
class Counter {
 private:
  int counter_;

 public:
  // Creates a counter that starts at 0.
  Counter() : counter_(0) {}
  // Returns the current counter value, and increments it.
  int Increment();
  // Returns the current counter value, and decrements it.
  int Decrement();
};

#endif // PRELOADED_INCLUDED
